autocmd BufWritePost *.c,*.h silent! !ctags -f ~/.vim/tags

function! LoadSkeleton()
        " skeleton files
        let SKELDIR = $HOME."/.vim/skel"
        if !isdirectory(SKELDIR)
            call mkdir(SKELDIR, "", 0755)
        endif
        let ext = expand("%:e")
        let name = expand("%:t")
        let base = toupper(substitute(name, "[^A-Za-z0-9]", "_", "g"))
        if ext =~ '^h$\|^hpp$\|^hh$\|^hxx$'
            let guard = base . "_INCLUDED"
            let skeleton = [ "#ifndef " . guard, "#define " . guard, "", "", "", "#endif // " . guard ]
            call append(0, skeleton)
            call deletebufline(bufname('%'), '$')
            call cursor(4, 1)
        else
            silent! exec ":r ".SKELDIR."/".&filetype | 0delete _
        endif
endfunction

autocmd BufNewFile * call LoadSkeleton()
set cpoptions-=a

