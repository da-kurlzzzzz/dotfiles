" persistent undo feels good
if !isdirectory($HOME."/.vim")
    call mkdir($HOME."/.vim", "", 0755)
endif
if !isdirectory($HOME."/.vim/undo")
    call mkdir($HOME."/.vim/undo", "", 0700)
endif
set undodir=~/.vim/undo
set undofile

" tricks for cursor shape and tmux colors
