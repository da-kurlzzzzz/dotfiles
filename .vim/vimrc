inoremap " ""<esc>i

function! s:SmartEnter()
    let line = getline('.')
    let col = col('.') - 1
    if line[col-1] == '{' && line[col] == '}'
        return "\<cr>\<C-o>O"
    endif
    return "\<cr>"
endfunction

inoremap <CR> <C-G>u<C-r>=<SID>SmartEnter()<CR>

