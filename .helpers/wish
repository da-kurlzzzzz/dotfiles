#!/usr/bin/make -f

.PHONY: default
default:
	@echo be careful what you wish for
	@echo currently documented options are
	@echo /etc/.../filename : populates filename with contents from rootdir

ROOTDIR := ~/.helpers/rootfiles

/% : $(ROOTDIR)/%
	@echo trying to copy $< to $@
	[ -d $(@D) ] || sudo mkdir -p $(@D)
	sudo cp $< $@
