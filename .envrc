# for everything
export EDITOR=vim
export TERMINAL=alacritty
export PAGER=cat

# my binaries and python local files
export PATH="${HOME}/.local/bin:/usr/local/bin:/usr/bin:/usr/lib/jvm/default/bin:/usr/bin/site_perl:/usr/bin/vendor_perl:/usr/bin/core_perl"

# refer to vim :help manpager.vim
export MANPAGER=manpager.sh
export MANSECT="1:8:2:3:0:3type:5:4:9:6:7:1p:3p:0p:n"
# default is:
# MANSECT="1:1p:n:l:8:3:3p:0:0p:2:3type:5:4:9:6:7"
# my changes:
# posix goes down (1p, 3p, 0p)
# tcl goes down (n)
# lapack is removed (l) (upstream moved manuals to section 3)
# system calls (2) go above libraries (3, 0)

DIRCOLORS="${HOME}/.dircolors"
test -r $DIRCOLORS && eval "$(dircolors $DIRCOLORS)"
unset DIRCOLORS

# both bash and zsh use this
export HISTSIZE=5000000

# easy solution for synchronizing themes
export QT_QPA_PLATFORMTHEME=gtk3

# ctrl-s for forward history search
stty -ixon

