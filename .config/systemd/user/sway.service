[Unit]
Description=sway
Documentation=man:sway(5)
BindsTo=sway-session.target
Wants=sway-session-pre.target
After=sway-session-pre.target
Before=sway-session.target

[Service]
Type=notify
NotifyAccess=all
ExecStart=/usr/bin/sway
TimeoutStopSec=10
ExecStopPost=/usr/bin/systemctl --user unset-environment SWAYSOCK DISPLAY I3SOCK WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
