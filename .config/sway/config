set $mod Mod4
set $alt Mod1

font pango:Monospace 8

# Custom bindings start here

set $execnoid exec --no-startup-id

exec copyq --start-server

# Use systemctl to hibernate and sleep
bindsym --to-code $mod+Shift+s exec systemctl hibernate
bindsym --to-code $mod+Shift+w exec systemctl suspend

# Autostart starts here

# screen must be on
exec xset s off -dpms
# strange bell is now off
exec xset -b
# hide cursor when it is not needed
seat * hide_cursor 3000
# remember per-window keyboard layout
exec swaykbdd

exec xmodmap -e 'keycode 135 = Super_R' && xset -r 135
set $locker swaylock --color=000000 --hide-keyboard-layout --indicator-radius=90
exec swayidle -w before-sleep "$locker"

# Defaults start here

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
set $terminal alacritty

# kill focused window
bindsym --to-code $mod+Shift+q kill

# reload the configuration file
bindsym --to-code $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym --to-code $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym --to-code $mod+Shift+e exit
# lock screen (without logging out
bindsym --to-code $mod+Shift+z exec $locker

# Navigation starts here

# change focus
bindsym --to-code $mod+h focus left
bindsym --to-code $mod+j focus down
bindsym --to-code $mod+k focus up
bindsym --to-code $mod+l focus right

# move focused window
bindsym --to-code $mod+Shift+h move left
bindsym --to-code $mod+Shift+j move down
bindsym --to-code $mod+Shift+k move up
bindsym --to-code $mod+Shift+l move right

# split in horizontal orientation
bindsym --to-code $mod+n split h

# split in vertical orientation
bindsym --to-code $mod+v split v, layout stacking

# enter fullscreen mode for the focused container
bindsym --to-code $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym --to-code $mod+s layout stacking
bindsym --to-code $mod+w layout tabbed
bindsym --to-code $mod+e layout toggle split

# toggle tiling / floating
bindsym --to-code $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym --to-code $mod+space focus mode_toggle

# focus the parent container
bindsym --to-code $mod+a focus parent

# focus the child container
bindsym --to-code $mod+z focus child

focus_follows_mouse no
workspace_auto_back_and_forth yes
focus_wrapping workspace

bindsym --to-code $mod+Shift+minus move scratchpad
bindsym --to-code $mod+minus scratchpad show
# Bar starts here

# Start i3bar to display a workspace bar
set $refresh_i3status killall -44 i3blocks
bar {
        status_command exec i3blocks
}

# Boring stuff starts here

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

include /etc/sway/config.d/*
include ~/.config/sway/config.d/*
