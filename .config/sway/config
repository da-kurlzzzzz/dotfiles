set $mod Mod4
set $alt Mod1

font pango:Monospace 8

# Custom bindings start here

set $execnoid exec --no-startup-id

# Use pactl to adjust volume in PulseAudio.
set $volume_up pactl set-sink-volume @DEFAULT_SINK@ +10%
set $volume_dn pactl set-sink-volume @DEFAULT_SINK@ -10%
set $volume_mu pactl set-sink-mute @DEFAULT_SINK@ toggle
set $mic_mute pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym --to-code XF86AudioRaiseVolume $execnoid $volume_up && $refresh_i3status
bindsym --to-code KP_Up                $execnoid $volume_up && $refresh_i3status
bindsym --to-code XF86AudioLowerVolume $execnoid $volume_dn && $refresh_i3status
bindsym --to-code KP_Down              $execnoid $volume_dn && $refresh_i3status
bindsym --to-code XF86AudioMute        $execnoid $volume_mu && $refresh_i3status
bindsym --to-code KP_Insert            $execnoid $volume_mu && $refresh_i3status
bindsym --to-code XF86AudioMicMute     $execnoid $mic_mute  && $refresh_i3status
bindsym --to-code KP_Delete            $execnoid $mic_mute  && $refresh_i3status

# Use playerctl to control media players
set $play_paus playerctl play-pause
set $play_next playerctl next
set $play_prev playerctl previous
bindsym --to-code XF86AudioPlay $execnoid $play_paus
bindsym --to-code KP_Begin      $execnoid $play_paus
bindsym --to-code XF86AudioNext $execnoid $play_next
bindsym --to-code KP_Right      $execnoid $play_next
bindsym --to-code XF86AudioPrev $execnoid $play_prev
bindsym --to-code KP_Left       $execnoid $play_prev

# Use brightnessctl to control monitor backlight
set $bright_up brightnessctl -n -e set +11%
set $bright_dn brightnessctl -n -e set 11%-
bindsym --to-code XF86MonBrightnessUp   $execnoid $bright_up
# also known as PgUp
bindsym --to-code KP_Prior              $execnoid $bright_up
bindsym --to-code XF86MonBrightnessDown $execnoid $bright_dn
# also known as PgDn
bindsym --to-code KP_Next               $execnoid $bright_dn

for_window [title="CopyQ"] floating enable
exec copyq --start-server
bindsym --to-code $mod+Shift+v exec copyq show

# Use import and xclip to take screenshots
bindsym --to-code --release Print $execnoid grim -g "$(slurp)" - | copyq copy image/png -
bindsym --to-code --release Alt_R $execnoid swaymsg -t get_tree | jq -j '.. | select(.type?) | select(.focused).rect | "\(.x),\(.y) \(.width)x\(.height)"' | grim -g - - | copyq copy image/png -

# Use systemctl to hibernate and sleep
bindsym --to-code $mod+Shift+s exec systemctl hibernate
bindsym --to-code $mod+Shift+w exec systemctl suspend

bindsym --to-code F1 exec qalculate-gtk
for_window [title="Qalculate!"] floating enable
# F2 is for excel
bindsym --to-code F3 exec firefox
bindsym --to-code F4 exec gimp --batch-interpreter plug-in-script-fu-eval -sf -b "$(cat ~/.local/bin/new-image.scm)"
for_window [title=".*GIMP"] floating enable
for_window [title="GNU Image Manipulation Program"] floating enable
# F5 to reload in browser
# F6 to edit address in browser
bindsym --to-code F7 exec ~/.local/bin/toggle-headphones.sh
# F8 is host key in VirtualBox
bindsym --to-code F9 exec Telegram
# F10 is free real estate
# F11 cannot be imitated with Esc,number so i will not rebind it
# F12 to open dev console in browser

# Autostart starts here

# screen must be on
exec xset s off -dpms
# strange bell is now off
exec xset -b
# hide cursor when it is not needed
seat * hide_cursor 3000
# remember per-window keyboard layout
exec swaykbdd

exec xmodmap -e 'keycode 135 = Super_R' && xset -r 135
set $locker swaylock --color=000000 --hide-keyboard-layout --indicator-radius=90
exec swayidle -w before-sleep "$locker"

exec autorandr -l $(cat /etc/hostname)
include ~/.config/i3/displays.conf

# Defaults start here

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
set $terminal alacritty
bindsym --to-code $mod+Return exec $terminal
bindsym --to-code $mod+Shift+Return exec rofi -show ssh
bindsym --to-code $mod+$alt+Return exec $terminal -e zsh -c "tmux attach -t $(tmux list-sessions | grep -v attached | tail -n 1 | cut -d: -f1)"

# kill focused window
bindsym --to-code $mod+Shift+q kill

# reload the configuration file
bindsym --to-code $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym --to-code $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym --to-code $mod+Shift+e exit
# lock screen (without logging out
bindsym --to-code $mod+Shift+z exec $locker

# start dmenu (a program launcher)
bindsym --to-code $mod+d $execnoid rofi -show run

# Navigation starts here

# change focus
bindsym --to-code $mod+h focus left
bindsym --to-code $mod+j focus down
bindsym --to-code $mod+k focus up
bindsym --to-code $mod+l focus right

# move focused window
bindsym --to-code $mod+Shift+h move left
bindsym --to-code $mod+Shift+j move down
bindsym --to-code $mod+Shift+k move up
bindsym --to-code $mod+Shift+l move right

# split in horizontal orientation
bindsym --to-code $mod+n split h

# split in vertical orientation
bindsym --to-code $mod+v split v, layout stacking

# enter fullscreen mode for the focused container
bindsym --to-code $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym --to-code $mod+s layout stacking
bindsym --to-code $mod+w layout tabbed
bindsym --to-code $mod+e layout toggle split

# toggle tiling / floating
bindsym --to-code $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym --to-code $mod+space focus mode_toggle

# focus the parent container
bindsym --to-code $mod+a focus parent

# focus the child container
bindsym --to-code $mod+z focus child

focus_follows_mouse no
workspace_auto_back_and_forth yes
focus_wrapping workspace

bindsym --to-code $mod+Shift+minus move scratchpad
bindsym --to-code $mod+minus scratchpad show
for_window [window_role="PictureInPicture"] sticky enable, move scratchpad, scratchpad show

# Bar starts here

# Start i3bar to display a workspace bar
set $refresh_i3status killall -44 i3blocks
bar {
        status_command exec i3blocks
}

# Boring stuff starts here

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym --to-code h resize shrink width 10 px or 10 ppt
        bindsym --to-code j resize grow height 10 px or 10 ppt
        bindsym --to-code k resize shrink height 10 px or 10 ppt
        bindsym --to-code l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym --to-code Left resize shrink width 10 px or 10 ppt
        bindsym --to-code Down resize grow height 10 px or 10 ppt
        bindsym --to-code Up resize shrink height 10 px or 10 ppt
        bindsym --to-code Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym --to-code Return mode "default"
        bindsym --to-code Escape mode "default"
        bindsym --to-code $mod+r mode "default"
}

bindsym --to-code $mod+r mode "resize"

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym --to-code $mod+1 workspace number $ws1
bindsym --to-code $mod+2 workspace number $ws2
bindsym --to-code $mod+3 workspace number $ws3
bindsym --to-code $mod+4 workspace number $ws4
bindsym --to-code $mod+5 workspace number $ws5
bindsym --to-code $mod+6 workspace number $ws6
bindsym --to-code $mod+7 workspace number $ws7
bindsym --to-code $mod+8 workspace number $ws8
bindsym --to-code $mod+9 workspace number $ws9
bindsym --to-code $mod+0 workspace number $ws10

# move focused container to workspace
bindsym --to-code $mod+Shift+1 move container to workspace number $ws1
bindsym --to-code $mod+Shift+2 move container to workspace number $ws2
bindsym --to-code $mod+Shift+3 move container to workspace number $ws3
bindsym --to-code $mod+Shift+4 move container to workspace number $ws4
bindsym --to-code $mod+Shift+5 move container to workspace number $ws5
bindsym --to-code $mod+Shift+6 move container to workspace number $ws6
bindsym --to-code $mod+Shift+7 move container to workspace number $ws7
bindsym --to-code $mod+Shift+8 move container to workspace number $ws8
bindsym --to-code $mod+Shift+9 move container to workspace number $ws9
bindsym --to-code $mod+Shift+0 move container to workspace number $ws10

input type:touchpad {
    tap enabled
    natural_scroll enabled
    drag_lock disable
}

input type:keyboard {
    xkb_layout "us,ru"
    xkb_options "grp:shifts_toggle,grp_led:caps,caps:escape,ctrl:swap_rwin_rctl"
}
