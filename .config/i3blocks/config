interval=1

[speed]
command=./speed.sh

[ping]
command=ping >/dev/null 2>&1 -W9 -c1 8.8.8.8 || printf "network down\n\n#FF0000\n#000000\n"
interval=10

[sda]
command=./disks.sh

[volume]
command=./volume.sh
signal=10

[wifi]
command=./wifi.sh

[battery]
command=./battery.sh

[disk]
command=df -h / | awk 'END { print $4 }'

[load]
command=cut -d' ' -f1-3 /proc/loadavg

[ram]
command=free -h | awk '/^Mem:/ { print $3 " / " $2 }'

[time]
command=date '+%F %T %a(%V)'

