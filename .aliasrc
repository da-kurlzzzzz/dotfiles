# auto cd to ranger directory
_run-ranger() {
    [ -z $RANGER_LEVEL ] && . ranger || echo ranger: not found
}
alias r=_run-ranger

_mkcd() {
    mkdir "$1" && cd "$1"
}
alias mkcd='_mkcd'

_passs() {
    cmd=(ssh $@)
    ${cmd[@]} -G | awk '/^tag /{print $2}' | read tag
    if [ ! -z "$tag" ]
    then
        f="$HOME/.ssh/passs/$tag"
        if [ -f "$f" ]
        then
            cmd=(sshpass -f $f ${cmd[@]})
        fi
    fi
    ${cmd[@]}
}

alias passs='_passs'

